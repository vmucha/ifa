<div ng-show="loaded" class="glossar-overlay">
    <div class="overlay-article-content" ui-view>


        <div class="js-ajax-content static-overlay" data-js-page="overlay">
            <div class="overlay-article glossar-overlay">
                <div class="overlay-article-content">
                    <a ui-shref="glossar"
                       class="overlay-article-link-close-top overlay-article-link js-overlay-close">
                    </a>
                    <h4>{{kicker}}</h4>

                    <h1 class="overlay-article-title">
                        {{headline}}
                    </h1>
                    <span class="overlay-article-excerpt">
                        {{intro}}
                    </span>

                    <div ng-switch="articleType">
                        <div ng-switch-when="news">
                            NEWSARTIKEL
                            <div class="articlebody" ng-bind-html="to_trusted(body)"></div>
                        </div>
                        <div ng-switch-when="xhtml">
                            xhtml
                            <div class="articlebody" ng-bind-html="to_trusted(body)"></div>
                        </div>
                        <div ng-switch-when="video">
                            video
                            <iframe ng-src="{{iframeURL}}" width="640" height="445" scrolling="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" frameborder="0" style="max-width:100%;"></iframe>
                        </div>
                        <div ng-switch-default>text</div>
                    </div>

                    <div class="overlay-article-end">

                        <a ui-sref="^"
                          class="button white overlay-article-link overlay-article-link-close-bottom js-overlay-close">
                            <i class="icon-close_icon"></i>
                            Ansicht schlie√üen
                        </a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>